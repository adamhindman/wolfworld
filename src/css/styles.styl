:root
  --rows 60
  --cols 60
  --cellSize 6rem // was 5
  
* 
  box-sizing: border-box
  
::-webkit-scrollbar,
::-webkit-scrollbar-button
  display none

html
  font-size 62.5%

body
  height: 100vh
  width: 100vw
  font-size: 1.6rem;
  font-family: 'Roboto', sans-serif;  
  overflow hidden
  display flex
  align-items center
  justify-content center
  background-color darkslategray
  background-position center
  background-size cover
#map
  -ms-overflow-style none
  scroll-behavior smooth
  overflow hidden
  display grid
  max-width 100rem
  border-radius .6rem
  max-height 50rem  
  margin 4rem
  grid-template-rows repeat(var(--rows), 1fr)
  grid-template-columns repeat(var(--cols), 1fr)
  box-shadow 0 1rem 10rem rgba(0,0,0,.5)
  [data-is-treasure="true"]
    &:before
      content 'ğŸ†' !important
      animation bob 1.25s infinite ease .625s
  [data-is-treasure="true"][data-is-player="true"]
    position relative
    &:before
      content 'ğŸ˜€' !important
      animation-play-state paused !important
    &:after
      content 'ğŸ†'
      position absolute
      text-shadow 0rem 0rem 3rem rgba(255,215,0, 1)      
      animation: victory 1s .25s 1 forwards 

#wrapper
  position relative
#help, #death-screen, #victory-screen
  font-size 1.8rem
  display none
  position absolute
  width 100%
  max-width 100rem
  height 100%
  max-height 50rem
  top 4rem
  left 4rem
  z-index 100
  border-radius .6rem
  padding 6rem 16rem
  color #fff
  background-color rgba(26,32,42,.98)
  .arrows
    display inline-block
    margin-top 1rem
    em
      display inline-block
      margin 0 .4rem
  p
    margin .8rem 0 1.2rem
    &.bottom
      margin-top 2rem
  ul
    list-style none
    padding 0
    margin 0
    li
      margin .4rem 0 .6rem
      span
        display inline-block
        margin-right 1rem
  em
    color rgba(255,255,255,.5)
    font-style normal
  &.shown
    display flex
    flex-direction column
    justify-content center
#death-screen, #victory-screen
  &.shown
    align-items center
    justify-content center



